{
  "compilerOptions": {
    "esModuleInterop": true,
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "lib": ["dom", "es2017"],
    "typeRoots": ["./node_modules/@types"],
    "plugins": [
      {
        "name": "typescript-styled-plugin"
      }
    ]
  }
}
